{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [ "ESNext" ],
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [ "./node_modules/@types", "./src/typings" ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  },
  "exclude": [ "package.json", "__TESTS__", "example", "temp" ]
}
